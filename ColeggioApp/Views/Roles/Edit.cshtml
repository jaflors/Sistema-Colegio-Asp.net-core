@model ColegioApp.Models.AspNetRole
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Administrador/AdminMaster.cshtml";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Editar Rol <small>Session</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
                <div class="x_content">
                    <br />
                    <form asp-action="Edit" method="post" class="form-horizontal form-label-left">
                        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
                        <input type="hidden" asp-for="Id" required="required" class="form-control col-md-7 col-xs-12">
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                Nombre Rol<span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" asp-for="Name" required="required" class="form-control col-md-7 col-xs-12">
                                <span asp-validation-for="Name" class="text-danger">  </span>
                            </div>
                        </div>



                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <a class="btn btn-primary" asp-action="Index">Volver</a>
                                <button type="submit" class="btn btn-success"> Editar</button>
                            </div>
                        </div>



                    </form>

                </div>

            </div>
        </div>

    </div>
</div>

