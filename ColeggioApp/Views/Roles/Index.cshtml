@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Administrador/AdminMaster.cshtml";
    }

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Roles<small>Users</small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="#">Settings 1</a>
                                </li>
                                <li>
                                    <a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>

                    <div class="clearfix"></div>
                </div>
                <div class="x_content">

                    <a class="btn btn-success" asp-action="Create"> Crear Rol </a>
                    @if (TempData["mensaje"] != null)
                    {


                        <div name="alerta" class="alert alert-info alert-dismissible fade in" role="alert">

                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <strong>
                                @TempData["mensaje"]
                            </strong>
                        </div>
                    }

                    @if (TempData["error"] != null)
                    {




                        <div name="alerta" class="alert alert-danger alert-dismissible fade in" role="alert">

                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <strong>
                                @TempData["error"]
                            </strong>
                        </div>



                    }




                    @if (Model.Count() > 0)
                    {




                        <table class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                            <thead>
                                <tr>

                                    <th style="text-align:center">Nombre</th>
                                    <th style="text-align:center">Accion</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td style="text-align:center">@item.Name</td>
                                        <td style="text-align:center">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary small"> Editar</a>

                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"> Borrar</a>


                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No hay Registros</p>
                    }

                </div>
            </div>
        </div>

    </div>





